<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuntoRecoleccionActivity">

    <TextView
        android:id="@+id/textPuntosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos de Recolección"
        android:textColor="#35424A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textPuntosInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta tu punto de recolección más cercano"
        android:textColor="#F75F6A"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="128dp" />
</androidx.constraintlayout.widget.ConstraintLayout>