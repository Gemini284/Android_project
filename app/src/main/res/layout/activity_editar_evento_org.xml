<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEventoOrg">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Evento"
        android:textColor="#0E0E0E"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/nuevaID"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="ID"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="256dp" />

    <EditText
        android:id="@+id/nuevaDire"
        android:layout_width="209dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Nueva Dirección"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="361dp" />

    <EditText
        android:id="@+id/nuevaFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20sp"
        android:text="Nueva Fecha"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="466dp" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:backgroundTint="#00BCD4"
        android:text="Actualizar información"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="602dp" />

</androidx.constraintlayout.widget.ConstraintLayout>