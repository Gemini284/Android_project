<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_bg"
        android:text="Siguiente"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="515dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Ya tienes una cuenta?"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="620dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicia Sesión "
        android:textColor="#C61438"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="620dp" />

    <EditText
        android:id="@+id/editText_password_register"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textPassword"
        app:passwordToggleEnabled="true"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="322dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textColor="#C61438"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="303dp" />

    <EditText
        android:id="@+id/editText_email_register"
        android:layout_width="303dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Eléctronico"
        android:textColor="#C61438"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="411dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#C61438"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/editText_name_register"
        android:layout_width="303dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="230dp" />

</androidx.constraintlayout.widget.ConstraintLayout>